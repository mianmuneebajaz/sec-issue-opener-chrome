
{
  "manifest_version": 3,
  "name": "SEC Issue Opener",
  "version": "1.0",
  "description": "Quick access to JIRA SEC issues on Shuttle Health Atlassian",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open SEC Issue"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["modal.css"]
    }
  ],
  "commands": {
    "open-sec-modal": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Open SEC issue modal"
    }
  }
}
